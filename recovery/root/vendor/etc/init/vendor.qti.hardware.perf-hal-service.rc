on boot
    start perf-hal

service perf-hal /system/bin/vendor.qti.hardware.perf-hal-service
    user root
    group root system readproc oem_2907
    setenv LD_LIBRARY_PATH /vendor/lib64:/vendor/lib:/system/lib64:/system/lib:/sbin
    disabled
    seclabel u:r:recovery:s0